<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= @list.photo.attached? ? (cl_image_path @list.photo.key, height: 1000, crop: :fill) : (image_path "popcorn-movie-party-entertainment.webp") %>')">
    <h1><%= @list.name %></h1>
</div>

<div class="container mb-4">
  <div class="d-flex">
    <%= link_to "Back", root_path, class: "btn me-2 m-4" %>
    <%= link_to "Add Movie",  new_list_bookmark_path(@list), class: "btn ms-2 m-4" %>
  </div>
  <div class="cards">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card-trip">
        <%= image_tag bookmark.movie.poster_url, alt: bookmark.movie.title, width: 200 %>
        <div class="d-flex">
          <div class="card-trip-infos">
            <div>
              <h2><%= bookmark.movie.title %></h2>
              <p class="overview"><%= bookmark.movie.overview %></p>
              <br>
            </div>
            <div class="d-flex align-items-end justify-content-between">
              <div class="comment">
                <i class="fa-solid fa-comment me-2"></i>
                <p><%= bookmark.comment %></p>
              </div>
            </div>
            <%= link_to bookmark_path(bookmark.id), method: :delete, data: { confirm: "Delete?"}, class: "movie-delete" do %>
              <i class="far fa-trash-alt"></i>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

</div>
