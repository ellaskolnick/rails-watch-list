<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= @list.photo.attached? ? (cl_image_path @list.photo.key, height: 300, crop: :fill) : (image_path "popcorn-movie-party-entertainment.webp") %>')">
    <h1><%= @list.name %></h1>
</div>

<div class="container p-3">
<%= link_to "Add Movie",  new_list_bookmark_path(@list), class: "btn" %>
  <br>
  <br>
  <div class="cards">
    <div class="card-trip">
      <% @list.bookmarks.each do |bookmark| %>
        <%= image_tag bookmark.movie.poster_url, alt: bookmark.movie.title, width: 200 %>
        <div class="card-trip-infos">
            <div>
              <h2><%= bookmark.movie.title %></h2>
              <p><%= bookmark.movie.overview %></p>
              <br>
              <div class="comment">
                <i class="fa-solid fa-comment me-2"></i>
                <p><%= bookmark.comment %></p>
              </div>
            </div>
              <%= link_to "Delete", bookmark_path(bookmark.id), method: :delete, data: { confirm: "Delete?"}, class: "btn-reverse" %>
          </div>
        <% end %>
      </div>
  </div>

  <br>
  <%= link_to "Back", root_path, class: "btn" %>
</div>
